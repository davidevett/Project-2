<h2>Create a Post About {{name}}</h2>

<form class="create-post-form">
    <div class="input-container">
        <label for="title">Title</label>
        <input type="text" id="title" value="{{name}}" />
    </div>
    <div class="input-container">
        <label for="content">Address</label>
        <input type="text" id="content" value="{{address}}" readonly />
    </div>
    <div class="input-container">
        <label for="text">Your Thoughts</label>
        <textarea id="text"></textarea>
    </div>
    <div class="input-container">
        <img src="{{image}}" alt="Image of {{name}}">
        <input type="hidden" id="image" value="{{image}}" />
    </div>
    <button type="submit">Submit Post</button>
</form>

<script src="/js/createPost.js"></script>