<div id="dashboard">
  <h2 class="subtitle">Discover New Flavors - Search and Manage Your Food
    Adventures:</h2>

  <div class="search-bar">
    <input
      type="text"
      id="searchLocation"
      class="input"
      placeholder="Enter a city or location..."
    />
    <input
      type="text"
      id="searchInput"
      class="input"
      placeholder="What are you craving?"
    />
    <button id="searchButton" class="btn btn-primary button">Search</button>
  </div>

  {{#each posts as |post|}}
    <a href="/dashboard/posts/{{id}}">
      <div class="post-div">
        <div class="">
          <h3>{{post.title}}</h3>
        </div>
        <div class="">
          {{post.image}}
        </div>
        <div class="">
          <p>{{post.content}}</p>
        </div>
        <div class="">
          <p>{{post.text}}</p>
        </div>
        <p>By user {{user.user}} on {{post.creationDate}}</p>
      </div>
    </a>
  {{/each}}
</div>
<script src="/js/dashboard.js"></script>